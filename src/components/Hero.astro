---
import JoinWaitlist from "./JoinWaitlist.astro";
---

<div class="isolate bg-white">
  <div
    class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]"
  >
    <svg
      class="relative left-[calc(50%-11rem)] -z-10 h-[21.1875rem] max-w-none -translate-x-1/2 rotate-[30deg] sm:left-[calc(50%-30rem)] sm:h-[42.375rem]"
      viewBox="0 0 1155 678"
    >
      <path
        fill="url(#45de2b6b-92d5-4d68-a6a0-9b9b2abad533)"
        fill-opacity=".3"
        d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
      ></path>
      <defs>
        <linearGradient
          id="45de2b6b-92d5-4d68-a6a0-9b9b2abad533"
          x1="1155.49"
          x2="-78.208"
          y1=".177"
          y2="474.645"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-color="#9089FC"></stop>
          <stop offset="1" stop-color="#FF80B5"></stop>
        </linearGradient>
      </defs>
    </svg>
  </div>
  <div class="px-6 pt-6 lg:px-8">
    <nav class="flex items-center justify-between" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img
            class="h-8"
            src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
            alt="Aptahub"
          />
        </a>
      </div>
      <div class="flex gap-x-12 flex-1 justify-end">
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900"
          >Pricing</a
        >
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900"
          >Features</a
        >
      </div>
    </nav>
  </div>
  <div class="relative px-6 lg:px-8">
    <div class="mx-auto max-w-3xl py-32">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          Transform your apps with data-driven analytics
        </h1>
        <p
          class="mt-6 text-base max-w-3xl mx-auto text-left text-gray-600 sm:text-xl sm:text-center"
        >
          Aptahub is a complete analytics suite purposefully built for desktop
          and mobile apps. Unlock rich insights into how your app is used and
          how to improve it!
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <JoinWaitlist />
        </div>
      </div>
    </div>
  </div>
</div>
