---
import SignUpOrDashboard from "./SignUpOrDashboard.astro";
import WorksWith from "./WorksWith.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/hero.png";
---

<div class="relative isolate overflow-hidden">
  <div
    class="mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-32 lg:flex lg:px-8 lg:py-20"
  >
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl lg:flex-shrink-0 lg:pt-8">
      <h1 class="mt-2 text-4xl font-title font-bold tracking-tight sm:text-6xl">
        Analytics for Apps. <br />Privacy-First. Simple.
      </h1>
      <p class="mt-6 text-xl leading-8 text-gray-500 max-w-md">
        Empower your app with insightful data, while safeguarding user privacy.
        Built for Desktop, Mobile and Web apps.
      </p>
      <div class="mt-10 flex items-center gap-x-6">
        <SignUpOrDashboard />
      </div>
      <WorksWith />
    </div>
    <div
      class="mx-auto mt-16 flex max-w-2xl sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-0 lg:max-w-none lg:flex-none xl:ml-32"
    >
      <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
        <div
          class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-2"
        >
          <Image
            src={heroImage}
            alt="Aptabase Dashboard Screenshot"
            width={1300}
            height={911}
            class="w-[76rem] rounded-xl shadow-2xl ring-1 ring-gray-900/10"
          />
        </div>
      </div>
    </div>
  </div>
</div>
