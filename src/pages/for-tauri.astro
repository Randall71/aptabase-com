---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
---

<BaseLayout
  title="Analytics for Tauri Apps - Aptabase"
  description="Open Source, Privacy-First Analytics for Tauri Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Tauri Apps"
    image="/tools/tauri.svg"
    sdkName="tauri-plugin-aptabase"
    sdkUrl="https://github.com/aptabase/tauri-plugin-aptabase"
    code={`trackEvent("play_music", {
  name: "Here comes the sun"
});`}
    lang="typescript"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <FAQ />
</BaseLayout>
