---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
---

<BaseLayout
  title="Analytics for Unreal Engine Games - Aptabase"
  description="Open Source, Privacy-First Analytics for Unreal Engine Games. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Unreal Engine Games"
    image="/tools/unreal.svg"
    sdkName="aptabase-unreal"
    sdkUrl="https://github.com/aptabase/aptabase-unreal"
    code={`FAnalytics::Get().
    GetDefaultConfiguredProvider()->
    RecordEvent(TEXT("Game Started"), Attributes);`}
    lang="cpp"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <FAQ />
  <Footer />
</BaseLayout>
