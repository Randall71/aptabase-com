---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
---

<BaseLayout
  title="Analytics for Swift Apps - Aptabase"
  description="Open Source, Privacy-First Analytics for Swift Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Swift Apps"
    image="/tools/apple.svg"
    sdkName="Swift SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase-swift"
    code={`Aptabase.shared.trackEvent("play_music", with: [
  "name": "Here comes the sun"
])`}
    lang="swift"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <Footer />
</BaseLayout>
