---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
---

<BaseLayout
  title="Analytics for .NET MAUI Apps - Aptabase"
  description="Open Source, Privacy-First Analytics for .NET MAUI. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name=".NET MAUI"
    image="/tools/dotnet.svg"
    sdkName=".NET MAUI SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase-maui"
    code={`_aptabase.TrackEvent("play_music", new() {
    { "name", "Here comes the sun" }
});`}
    lang="csharp"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <FAQ />
  <Footer />
</BaseLayout>
