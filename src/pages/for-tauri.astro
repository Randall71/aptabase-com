---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
---

<BaseLayout
  title="Privacy-first and simple analytics for Tauri Apps - Aptabase"
  description="Aptabase is a privacy-focused analytics for Tauri Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Tauri Apps"
    image="/tools/tauri.svg"
    sdkName="tauri-plugin-aptabase"
    sdkUrl="https://github.com/aptabase/tauri-plugin-aptabase"
    code={`Aptabase.trackEvent("play_music", {
  name: "Here comes the sun"
});`}
    lang="typescript"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <Footer />
</BaseLayout>
