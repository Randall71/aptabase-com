---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
---

<BaseLayout
  title="Analytics for Electron Apps - Aptabase"
  description="Open Source, Privacy-First Analytics for Electron Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Electron"
    image="/tools/electron.svg"
    sdkName="Electron SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase-electron"
    code={`trackEvent("play_music", {
  name: "Here comes the sun"
});`}
    lang="typescript"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <FAQ />
  <Footer />
</BaseLayout>
