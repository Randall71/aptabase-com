---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
---

<BaseLayout
  title="Privacy-first and simple analytics for Android Apps - Aptabase"
  description="Aptabase is a privacy-focused analytics for Android Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Android Apps"
    image="/tools/android.svg"
    sdkName="Kotlin SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase-kotlin"
    code={`Aptabase.instance.trackEvent("play_music", mapOf<String, Any>(
  "name" to "here_comes_the_sun"
))`}
    lang="kotlin"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <Footer />
</BaseLayout>
