---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
import Developers from "../components/features/Developers.astro";
---

<BaseLayout
  title="Analytics for React Native Apps - Aptabase"
  description="Open Source, Privacy-First Analytics for React Native Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="React Native"
    image="/tools/react-native.svg"
    sdkName="React Native SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase-react-native"
    code={`trackEvent("play_music", {
  name: "Here comes the sun"
});`}
    lang="typescript"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <Developers />
  <FAQ />
</BaseLayout>
