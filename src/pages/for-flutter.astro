---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import HeroFor from "../components/HeroFor.astro";
import PrivacyFirst from "../components/features/PrivacyFirst.astro";
import Simple from "../components/features/Simple.astro";
import Pricing from "../components/Pricing.astro";
---

<BaseLayout
  title="Privacy-first and simple analytics for Flutter Apps - Aptabase"
  description="Aptabase is a privacy-focused analytics for Flutter Apps. Get simple and actionable insights without compromising user privacy. Try it now!"
>
  <HeroFor
    name="Flutter Apps"
    image="/tools/flutter.svg"
    sdkName="Flutter SDK for Aptabase"
    sdkUrl="https://github.com/aptabase/aptabase_flutter"
    code={`Aptabase.instance.trackEvent("play_music", {
  "name": "here_comes_the_sun"
});`}
    lang="dart"
  />
  <PrivacyFirst />
  <Simple />
  <Pricing />
  <Footer />
</BaseLayout>
