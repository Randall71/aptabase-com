---
import Feature from "./Feature.astro";
import FeatureItem from "./FeatureItem.astro";

const color = "text-sky-700";
---

<Feature
  title="Analytics without the legal headaches"
  description="When it comes to tracking and privacy, Aptabase takes a radical approach to protect your users privacy."
  category="Privacy-First"
  color={color}
>
  <FeatureItem
    title="Track sessions, not users"
    description="Sessions tracked by Aptabase are completely anonymous and untraceable."
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class={`w-10 h-10 ${color}`}
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59"
      ></path>
    </svg>
  </FeatureItem>

  <FeatureItem
    title="Data not linked to anyone"
    description="Aptabase does not use any sort of fingerprinting, user identification or pseudonymisation. The data we collect is not linked to anyone."
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class={`w-10 h-10 ${color}`}
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M7.864 4.243A7.5 7.5 0 0119.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 004.5 10.5a7.464 7.464 0 01-1.15 3.993m1.989 3.559A11.209 11.209 0 008.25 10.5a3.75 3.75 0 117.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 01-3.6 9.75m6.633-4.596a18.666 18.666 0 01-2.485 5.33"
      ></path>
      <path
        stroke="red"
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </FeatureItem>
</Feature>
