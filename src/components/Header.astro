---
import Logo from "./Logo.astro";
import SignUpOrDashboard from "./SignUpOrDashboard.astro";
---

<header x-data="{ isOpen: false }">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-6 md:px-8"
    aria-label="Global"
  >
    <div class="flex items-center gap-x-12">
      <a href="/" class="-m-1.5 p-1.5 flex items-center">
        <Logo />
        <span class="font-title text-2xl font-semibold text-gray-900">
          Aptabase
        </span>
      </a>
      <div class="hidden md:flex md:gap-x-12">
        <a href="/blog" class="text-md text-gray-900 hover:text-blue-700">
          Blog
        </a>
        <a href="/#pricing" class="text-md text-gray-900 hover:text-blue-700">
          Pricing
        </a>
      </div>
    </div>
    <div class="flex md:hidden">
      <button
        type="button"
        @click="isOpen = !isOpen"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
          >
          </path>
        </svg>
      </button>
    </div>
    <div class="hidden md:flex items-center gap-x-4">
      <a
        href="https://github.com/aptabase/aptabase"
        target="_blank"
        class="text-sm rounded-md leading-6 px-4 flex items-center space-x-1 p-2 text-gray-700 hover:text-gray-900"
      >
        <svg
          fill="currentColor"
          viewBox="0 0 24 24"
          class="h-6 w-6"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"
          >
          </path>
        </svg>
        <span class="hidden lg:block">Star us on GitHub</span>
      </a>
      <SignUpOrDashboard />
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="md:hidden" role="dialog" aria-modal="true" x-show="isOpen">
    <div
      class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6"
    >
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5 flex items-center">
          <Logo />
          <span class="font-title text-2xl font-semibold text-gray-900">
            Aptabase
          </span>
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
          @click="isOpen = !isOpen"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"
            >
            </path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a
              href="/blog"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
            >
              Blog
            </a>
            <a
              href="/#pricing"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
            >
              Pricing
            </a>
          </div>
          <div class="py-6">
            <SignUpOrDashboard />
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
